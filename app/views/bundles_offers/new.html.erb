<h1> New Bundle </h1>

<h4> Hello <%= @user.first_name.capitalize %>, please will out this form</h4>

<%= link_to "Go back", bundles_offers_url  %>

<%= simple_form_for @bundle do |f| %>
  <%= f.input :name, required: true %>
  <%= f.input :description, required: true %>
  <%= f.input :price, required: true %>
  <%= f.input :photos, as: :file,input_html: { multiple: true },  required: true %>
  <%= f.label :Furniture %>
  <br>
  <%= f.collection_check_boxes :furnitures, Furniture.where(user_id: @user.id), :id, :name %>
  <br>
  <%= f.submit %>
<% end %>



