

<!-- Form -->

<div class="background4">
  <div class ="row">
    <div class="container col-md-8">
      <%= link_to "Go back", bundles_offers_url, class:"go-back-button" %>
      <h1> Rent Out Furniture Simply </h1>

      <p> Bundle furniture pieces you want to sell together and tell renters the essential details.
        <strong> Remember to attach a picture that they'll love. </strong></p>

        <div class="form-inputs">
          <%= simple_form_for @bundle do |f| %>
          <%= f.label :name %>
          <%= f.input :name, input_html: { class: 'user-box' }, label: false%>
          <%= f.label :description %>
          <%= f.input :description, input_html: { class: 'user-box' }, label: false%>
          <%= f.label :price %>
          <%= f.input :price, input_html: { class: 'user-box' }, label: false%>
          <%= f.input :photos, as: :file, input_html: { multiple: true, class: "add-file-btn" } %>
          <%= f.label :Furniture %>
          <br>
          <%= f.collection_check_boxes :furnitures, Furniture.where(user_id: @user.id), :id, :name %>
          <%= f.button :submit, "Lease it", class: "btn-last" %>
          <br>
        </div>
        <% end %>
      </div>
    </div>
  </div>

</body>
</html>

