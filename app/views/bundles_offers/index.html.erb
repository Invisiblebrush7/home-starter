<!-- Top Nav -->
<div class="navbar">
  <%= image_tag "house-logo.png", class: "logo" %>
  <a href="#news">Contact</a>
  <a href="#contact">About</a>

  <div class="signup-btn">
    <% if !user_signed_in? %>
    <%= link_to "Seller Log In", new_user_session_url, class: "margin-right-navbar" %>
    <% end %>

  <% if user_signed_in? %>
    <%= link_to "Log Out", destroy_user_session_url, method: :delete  %>
    <% else %>
    <%= link_to "Sign Up as Seller", new_user_registration_url, class: "btn-secondary" %>
    <% end %>
  </div>
</div>

<!-- Rest of Page -->

  <div class="seller-banner">

    <% if user_signed_in? %>
      <h1>Welcome back, <%= @user.first_name.capitalize %>!</h1>
    <% else %>
      <h1>Hello there!</h1>
    <% end %>

    <div class ="row">
      <div class="container col-2">
        <%= link_to "Create a New Bundle", new_bundles_offer_url, class: "btn-seller"  %>
      </div>
    </div>

    <br>
    <br>
    
    <% if user_signed_in? && @user.user_type == "Seller" %>
      <div class="tab">
        <button id="default" class="tablink All"> All Offers </button>
        <button class="tablink MyOffers "> My Offers </button>
      </div>

      <div id="All" class="tabcontent">
        <h2> See all our Furniture Offers </h2>
        <div class="bundle-cards">
        <% @bundles.each do |bundle| %>
          <div class="bundle-card">
              <div class= "bundle-card-footer">
                <h4> <%= bundle.name.capitalize %> </h4>
                <div class="description">
                  <%= link_to "View", bundles_offer_url(bundle), class: "view" %>
                  <p> $<%= bundle.price %> </p>
                </div>
              </div>
          </div>
        <% end %>
        </div>
      </div>

      <div id="MyOffers" class="tabcontent">
        <h2> See Your Existing Furniture Bundles </h2>
        <div class="bundle-cards">
        <% @bundles_user.each do |bundle| %>
          <div class="bundle-card">
              <div class= "bundle-card-footer">
                <h4> <%= bundle.name.capitalize %> </h4>
                <div class="description">
                  <%= link_to "View", bundles_offer_url(bundle), class: "view" %>
                  <p> $<%= bundle.price %> </p>
                </div>
              </div>
          </div>
        <% end %>
        </div>
      </div>

    <% else %>
      <h2> See Your Existing Furniture Bundles </h2>
      <div class="bundle-cards">
      <% @bundles.each do |bundle| %>
        <div class="bundle-card">
            <div class= "bundle-card-footer">
              <h4> <%= bundle.name.capitalize %> </h4>
              <div class="description">
                <%= link_to "View", bundles_offer_url(bundle), class: "view" %>
                <p> $<%= bundle.price %> </p>
              </div>
            </div>
        </div>
      <% end %>
      </div>
    <% end %>



  </body>
