<!-- Top Nav -->
<div class="navbar">
  <a class="navbar-brand" href="/">
  <%= image_tag "house-logo.png", class: "logo" %>
  </a>
  <a href="#news">Contact</a>
  <a href="#contact">About</a>

  <div class="signup-btn">
    <% if !user_signed_in? %>
    <%= link_to "Seller Log In", new_user_session_url, class: "margin-right-navbar" %>
    <% end %>

  <% if user_signed_in? %>
    <%= link_to "Log Out", destroy_user_session_url, method: :delete  %>
    <% else %>
    <%= link_to "Sign Up as Seller", new_user_registration_url, class: "btn-secondary" %>
    <% end %>
  </div>
</div>

<!-- Display -->

<div class="show-container">
  <div class="show-image">
    <%= link_to "Go back", bundles_offers_url, class:"go-back-button" %>
    <br>
    <% @bundle.photos.each do |photo| %>
        <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>

  </div>


    <div class="show-text">
      <h2> <%= @bundle.name.capitalize %> </h2>
      <h3> $<%= @bundle.price %> </h3>
      <p> <%= @bundle.description %> </p>

      <% @bundle.furnitures.each do |furniture| %>
       <p> <%= furniture.name %> </p>
      <% end %>

      <%= link_to "Rent Furniture", bundles_offers_url, class: "btn btn-secondary"  %>
      <br><br>
      <h4> Arrives in 2-5 weeks if you order today</h4>


    </div>
</div>

